# Environment Configuration for MySQL
# Copy this file to .env and update with your MySQL credentials

# Database Configuration
DB_TYPE=mysql
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=reconciltion
MYSQL_PORT=3306

# Tesseract OCR Configuration (optional)
# TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe

# File Upload Configuration
MAX_INVOICE_FILES=10
MAX_BANK_FILES=10
MAX_FILE_SIZE_MB=100

# Flask Configuration
FLASK_DEBUG=1
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# Rate Limiting
RATE_LIMIT=30 per minute

# Other configurations (keep existing values)
ENABLE_CACHING=1
CACHE_TTL_SECONDS=300
AUTO_TRAIN_ENABLED=1
ENABLE_DEDUPLICATION=1
